<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="750">
    <DockPanel>
        <Label DockPanel.Dock="Bottom" Content="Please drop a file onto the target above."/>
        <ListView x:Name="results" FontFamily="Consolas" AllowDrop="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Original" DisplayMemberBinding="{Binding Original}" Width="250"/>
                    <GridViewColumn Header="Parsed" DisplayMemberBinding="{Binding Parsed}" Width="450"/>
                </GridView>
            </ListView.View>
        </ListView>
        <!--<ListBox x:Name="results"/>-->
    </DockPanel>
</Window>